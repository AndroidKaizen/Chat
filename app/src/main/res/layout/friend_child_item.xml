<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/window_bg"
    android:orientation="horizontal" >
    <ImageView 
        android:id="@+id/friend_icon"
        android:layout_width="40.0dp"
        android:layout_height="40.0dp"
        android:layout_margin="3dip"
        android:background="@drawable/avatar_placeholder"/>
	<TextView 
	    android:id="@+id/friend_nickname"
	    android:layout_width="fill_parent"
	    android:layout_toRightOf="@id/friend_icon"
	    android:paddingTop="5dp"
	    android:textColor="@color/title_bg"
	    android:layout_height="wrap_content"
	    android:textSize="18sp"
	    android:text="Game Room"/>
	<TextView 
	    android:id="@+id/friend_mood"
	    android:layout_width="fill_parent"
	    android:layout_toRightOf="@id/friend_icon"
	    android:layout_below="@id/friend_nickname"
	    android:layout_height="wrap_content"
	    android:textSize="14sp"
	    android:text="I look forward to it"/>
	<ImageView 
	    android:layout_below="@id/friend_icon"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/interval_line"/>
</RelativeLayout>